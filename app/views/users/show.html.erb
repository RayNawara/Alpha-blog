<h1 align="center">Welcome to <%= @user.username %>'s page!</h1>
<div class="row">
  <div align="center" class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s Articles</h4>
<%= render 'articles/articles', obj: @user.articles %>
<hr>
<div class="article-actions">
  <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-xs btn-primary" %>
  <%= link_to "Delete this user", user_path(@user), method: :delete, 
    data: {confirm: "Are you sure you want to delete the user?"}, 
    class: "btn btn-xs btn-danger" %>
  <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
</div>